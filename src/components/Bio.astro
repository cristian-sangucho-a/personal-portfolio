---
import { PROFILE } from "../content/PROFILE";
import Button from "../components/Button.astro";
import { Linkedin, Github, Mail, Twitter } from "lucide-react";
---

<div class="animate-appear flex h-full w-full flex-col">
  <div class="flex justify-around gap-4 p-2 md:max-h-[300px]">
    <div class="flex flex-col">
      <p class="m-0 text-xl font-light">
        Hi, I'm
        <b class="font-bold">{PROFILE.first_name}</b>.
      </p>
      <ul class="pt-4">
        {PROFILE.shortIntros.map((intro) => <li>{intro}</li>)}
      </ul>
    </div>
    <div>
      <img
        src=""
        class="pointer-events-none absolute bottom-[-20px] right-[-110px] z-[-1] max-h-[256px] w-auto select-none opacity-50 md:relative md:bottom-auto md:right-auto md:z-auto md:opacity-100"
        width="100%"
        height="auto"
        alt={`image of ${PROFILE.name}`}
      />
    </div>
  </div>
  <div class="flex gap-8 p-2">
    <Button
      href={PROFILE.links.github}
      aria-label="github profile"
      variant="primary"
      size="large"
    >
      <Github />
      <span class="sr-only">GitHub Profile</span>
    </Button>
    <Button
      href={PROFILE.links.github}
      aria-label="github profile"
      variant="primary"
      size="large"
    >
      <Linkedin />
      <span class="sr-only">GitHub Profile</span>
    </Button>
    <Button
      href={PROFILE.links.github}
      aria-label="github profile"
      variant="primary"
      size="large"
    >
      <Mail />
      <span class="sr-only">GitHub Profile</span>
    </Button>
  </div>
</div>
