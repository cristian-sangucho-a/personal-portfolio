---
import { PROFILE } from "../content/PROFILE";
import Card from "./atoms/Card.astro";

interface Props {
  rowSpan: string;
}
const { rowSpan } = Astro.props;
const baseStyle = `animate-appear col-span-full m-4  md:my-2 md:mx-0 `;
const conbinedStyles = `${baseStyle} ${rowSpan}`;
---

<div class={conbinedStyles}>
  <div
    class="grid auto-rows-fr grid-cols-1 gap-4 sm:grid-cols-2 sm:gap-4 md:grid-cols-3 md:gap-6 lg:grid-cols-4 lg:gap-8 lg:overflow-x-auto"
  >
    {
      PROFILE.shortIntros.map((intro) => (
        <Card
          className="h-full"
          title={typeof intro === "string" ? intro : intro.title}
          badge={typeof intro === "string" ? intro : intro.badge}
          description={typeof intro === "string" ? intro : intro.description}
        />
      ))
    }
  </div>
</div>
