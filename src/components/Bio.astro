---
import { PROFILE } from "../content/PROFILE";
import Button from "../components/Button.astro";
import { Linkedin, Github, Mail, Twitter } from "lucide-react";
---

<div class="animate-appear flex h-full w-full flex-col">
  <div
    class="flex flex-col items-center gap-2 md:flex-row md:justify-around md:gap-4 md:px-2 md:py-2 lg:gap-8"
  >
    <div class="flex flex-col items-center md:max-w-[600px] md:items-start">
      <p class="m-0 text-lg font-light md:text-xl">
        Hi, I'm
        <b class="font-bold">{PROFILE.first_name}</b>.
      </p>
      <ul class="space-y-1 py-2 text-sm md:text-base">
        {PROFILE.shortIntros.map((intro) => <li>{intro}</li>)}
      </ul>
      <div class="flex flex-wrap justify-center gap-4 p-2 md:gap-6">
        <Button
          href={PROFILE.links.github}
          aria-label="github profile"
          variant="primary"
          size="large"
        >
          <Github />
          <span class="sr-only">GitHub Profile</span>
        </Button>
        <Button
          href={PROFILE.links.github}
          aria-label="github profile"
          variant="primary"
          size="large"
        >
          <Linkedin />
          <span class="sr-only">LinkedIn Profile</span>
        </Button>
        <Button
          href={PROFILE.links.github}
          aria-label="github profile"
          variant="primary"
          size="large"
        >
          <Mail />
          <span class="sr-only">Personal Mail</span>
        </Button>
      </div>
    </div>
    <div class="relative md:mt-0">
      <img
        src="/src/assets/foto-perfil.png"
        class="pointer-events-none bottom-[-20px] right-[-110px] max-h-[256px] w-auto select-none md:relative md:bottom-auto md:right-auto md:z-auto"
        width="100%"
        height="auto"
        alt={`image of ${PROFILE.name}`}
      />
    </div>
  </div>
</div>
