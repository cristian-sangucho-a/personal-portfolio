---
import { PROFILE } from "@/content/PROFILE";
---

<header
  class="sticky top-0 z-50 m-0 flex h-16 w-full items-center space-x-4 border-b-2 px-2 backdrop-blur-sm sm:justify-between sm:px-3 md:h-20 md:px-4 lg:px-8"
>
  <a href="/" class="flex items-center gap-6 space-x-2 md:gap-10">
    <span
      class="inline-block text-sm font-bold tracking-tight sm:text-base sm:tracking-normal md:text-xl lg:text-2xl lg:tracking-wide xl:text-3xl"
    >
      Cristian Sangucho
    </span>
  </a>
  <nav class="flex flex-1 items-center justify-end space-x-4">
    <a
      href="/projects"
      class="custom-rounded p-2 text-xs hover:bg-muted sm:px-3 sm:text-sm md:px-4 md:py-2 md:text-base lg:text-lg"
    >
      Projects
    </a>
    <a
      href={PROFILE.links.github}
      class="custom-rounded p-2 text-xs hover:bg-muted sm:px-3 sm:text-sm md:px-4 md:py-2 md:text-base lg:text-lg"
    >
      GitHub
    </a>
  </nav>
</header>
<style>
  .custom-rounded {
    border-radius: 16px;
  }

  @media (min-width: 640px) {
    span[class*="text-base"] {
      font-size: clamp(1rem, 2.5vw, 1.5rem);
    }
  }

  @media (min-width: 1024px) {
    span[class*="lg:text-2xl"] {
      font-size: clamp(1.5rem, 2.2vw, 2rem);
    }
  }
</style>
