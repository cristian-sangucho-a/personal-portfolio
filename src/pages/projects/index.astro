---
import { getCollection } from "astro:content";
import IndexLayout from "../../layouts/IndexLayout.astro";
import ProjectCard from "../../components/molecules/ProjectCard.astro";

const projects = await getCollection("projects");
---

<IndexLayout
  title="Projects"
  description="Projects I have worked on recently."
  subTitle="My Projects"
>
  <div class="grid grid-cols-1 gap-2 md:grid-cols-3 md:gap-4">
    {
      projects.map((project: any) => (
        <ProjectCard
          key={project.data.title}
          href={"/projects/" + project.slug}
          heading={project.data.title}
          description={project.data.description}
          altText={project?.data?.image.alt}
          imagePath={project?.data?.image.url}
        />
      ))
    }
  </div>
</IndexLayout>
